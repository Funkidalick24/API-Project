          },
          "500": {
            "description": "Server error"
          }
        }
      },
      "put": {
        "tags": ["Contacts"],
        "summary": "Update contact by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Contact ID"
          },
          {
            "in": "body",
            "name": "body",
            "description": "Updated contact object",
