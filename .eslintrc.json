{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "windows"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "no-unused-vars": "warn",
    "no-console": "warn",
    "no-undef": "error",
    "camelcase": "warn",
    "object-curly-spacing": ["error", "always"],
    "arrow-spacing": "error",
    "no-multiple-empty-lines": ["error", { "max": 1 }],
    "eqeqeq": ["error", "always"],
    "prefer-const": "error",
    "no-var": "error"
  }
}
